<%= render 'navbar' %>

<div class="page-name">
  <h3>Add List</h3>
</div>

<div class="form">
  <div class="form-size">
    <%= simple_form_for(@list) do |t| %>
      <div class="text-area">
        <div class="text"><%= t.input :name %></div>
        <div class="text"><%= t.input :photo, as: :file %></div>
        <%= t.submit "Add", class: "btn btn-dark-blue" %>
      </div>
    <% end %>
  </div>
</div>
