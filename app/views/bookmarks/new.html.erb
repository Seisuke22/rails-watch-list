<%= render 'navbar' %>

<div class="page-name">
  <h3>Bookmark a Movie</h3>
</div>

<div class="form">
  <div class="form-size">
    <%= simple_form_for [@list, @bookmark] do |t| %>
      <div class="text-area">
        <div class="text"><%= t.input :comment %></div>
        <div class="text"><%= t.association :movie %></div>
      </div>
      <%= t.submit "Add", class: "btn btn-dark-blue" %>
    <% end %>
  </div>
</div>
